#if...else

a=int(input("enter the first no."))
b=int(input("enter the second no."))
if(a>b):
    print("greater no. is",a)
else:
    print("greater no. is",b)

print()
print()

#if...elif...else
a=int(input("enter the first no."))
b=int(input("enter the second no."))
c=int(input("enter the third no."))
if(a>b and a>c):
    print("greater no.",a)
elif(b>a and b>c):
    print("greater no.",b)
else:
    print("greater no.",c)
